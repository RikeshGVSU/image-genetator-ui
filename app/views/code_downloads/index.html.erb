<p id="notice"><%= notice %></p>

<h1>Code Downloads</h1>
<br><br>
<table id ="example" class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Versions</th>
      <th>Description</th>
      <th></th>
      <th>Download</th>
      <% if signed_in? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @code_downloads.each do |code_download| %>
      <tr>
        <td><%= code_download.versions %></td>
        <td><%= code_download.description %></td>
        <td><%= link_to 'Show', code_download %></td>
        <td> <%= link_to 'download',code_download.file %></td>
        <% if signed_in? %>
          <td><%= link_to 'Edit', edit_code_download_path(code_download) %></td>
          <td><%= link_to 'Destroy', code_download, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if signed_in? %>
<%= link_to 'New Code Download', new_code_download_path %>
<% end %>